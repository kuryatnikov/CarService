<Window x:Class="CarService.Windows.AddEngineTypeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarService.Windows"
        mc:Ignorable="d" ResizeMode="NoResize"
        Title="AddEngineTypeWindow" Height="140" Width="200" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Text="Тип Двигателя" HorizontalAlignment="Center" 
                   VerticalAlignment="Bottom" Grid.Row="0" Margin="0,5,0,0"></TextBlock>
        <TextBox Grid.Row="1" Margin="5" Height="25" Name="EngType" VerticalContentAlignment="Center"></TextBox>
        <Button Grid.Row="2" Margin="5" Content="ОК" IsDefault="True" Click="OkClick"></Button>
    </Grid>
</Window>
